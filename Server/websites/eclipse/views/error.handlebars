{{#> layout}}
    {{#content "body"}}
        <div class="card card-body">
            <div class="text-center px-3 py-3">
                <img class="error-blob-img" src="{{ rboxlo.domain }}/img/blobs/{{ objects.blob }}.png">
                <hr>
                <h3>{{ objects.code }}</h3>
                <span>{{ objects.description }}</span>
                <div class="d-flex justify-content-center mt-3">
                    <button class="btn btn-secondary me-3" role="button" onclick="window.history.back()">Go back</button>
                    <a href="{{ rboxlo.domain }}/" class="btn btn-primary" role="button">Home</a>
                </div>
            </div>
        </div>
    {{/content}}
{{/layout}}